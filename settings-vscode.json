{
    "files.autoSave": "onFocusChange",
    "workbench.editor.enablePreview": false,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.formatOnType": true,
    "editor.minimap.showSlider": "always",
    "eslint.autoFixOnSave": true,
    "eslint._legacyModuleResolve": true,
    "eslint.alwaysShowStatus": true,
    "html.format.endWithNewline": true,
    "html.format.indentHandlebars": true,
    "html.format.indentInnerHtml": true,
    "jshint.lintHTML": true,
    "javascript.implicitProjectConfig.checkJs": true,
    "terminal.integrated.shell.osx": "/bin/zsh",
    "emmet.triggerExpansionOnTab": true,
    "emmet.showSuggestionsAsSnippets": true,
    "editor.snippetSuggestions": "top",
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "vue-html": "html",
        "plaintext": "jade"
    },
    "eslint.validate": [
        {
            "language": "vue",
            "autoFix": true
        },
        {
            "language": "html",
            "autoFix": true
        },
        {
            "language": "javascript",
            "autoFix": true
        }
    ],
    "eslint.run": "onSave",
    "eslint.options": {
        "configFile": "/Users/atlas/sources/atlas_cliente/.eslintrc.js"
    },
    "[ruby]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "misogi.ruby-rubocop"
    },
    "editor.formatOnSaveTimeout": 1500,
    "prettier.eslintIntegration": true,
    "javascript.format.insertSpaceAfterCommaDelimiter": false,
    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
    "javascript.format.insertSpaceAfterSemicolonInForStatements": false,
    "files.insertFinalNewline": true,
    "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
    "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
    "window.zoomLevel": 0,
    "editor.tabSize": 2,
    "zenMode.hideTabs": false,
    "editor.tabCompletion": "on",
    "ruby.codeCompletion": "rcodetools",
    "ruby.format": "rubocop",
    "ruby.intellisense": "rubyLocate",
    "ruby.lintDebounceTime": 0,
    "ruby.rubocop.onSave": true,
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "vetur.format.defaultFormatter.js": "vscode-typescript",
    "eslint.provideLintTask": true,
    "window.nativeTabs": true,
    "debride": {
        "rails": true //Add some rails call conversions.
    },
    "ruby-lint": {
        "levels": [ /* a subset of these */
            "error",
            "warning",
            "info"
        ],
        "classes": [ /* a subset of these */
            "argument_amount",
            "loop_keywords",
            "pedantics",
            "shadowing_variables",
            "undefined_methods",
            "undefined_variables",
            "unused_variables",
            "useless_equality_checks"
        ]
    },
    "rubocop": {
        "lint": true, //enable all lint cops.
        "rails": true //Run extra rails cops
    },
    "ruby.lint": {
        "reek": true,
        "rubocop": true,
        "ruby": true, //Runs ruby -wc
        "fasterer": true,
        "debride": true,
        "ruby-lint": true
    },
    "ruby.lintDebounceTime": 500,
    "[javascript]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "breadcrumbs.enabled": true,
    "[json]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "merge-conflict.diffViewPosition": "Beside",
    "workbench.colorTheme": "Dracula",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.fontLigatures": true,
    "editor.fontFamily": "FiraCode-Retina", //Mac
    //"editor.fontFamily": "Fira Code Retina", //Windows, Linux

}
